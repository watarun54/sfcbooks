<tr>
  <td width="100" height="100"><%= item_image(item) %></td>
  <td><%= link_to item.title, item %></td>
  <td><%= ITEM_STATUS_HASH[item.status] %></td>
  <td><%= item.price %> 円</td>
  <td><%= item.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
  <td>
    <%= link_to "編集", edit_item_path(item), class: "mr-2" %>
    <%= link_to "削除", item, data: { confirm: "Are you sure?" }, method: :delete %>
  </td>
</tr>
