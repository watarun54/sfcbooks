<%= form_for(message, class: "form-inline") do |f| %>
  <%= render "devise/shared/error_messages", resource: message %>

  <div class="form-group">
    <%= f.text_area :content, class: "form-control", autofocus: true %>
  </div>

  <div class="actions">
    <%= f.hidden_field :room_id, value: room.id %>
    <%= hidden_field_tag :item_id, params[:item_id] %>
    <%= hidden_field_tag :host_user_id, room.host_user_id %>
    <%= hidden_field_tag :guest_user_id, room.guest_user_id %>
    <%= f.submit "送信", class: "shadow" %>
  </div>
<% end %>
