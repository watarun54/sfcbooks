<div class="container custom-form my-5">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :email, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset instructions", style: "width:268px;", class: "shadow" %>
    </div>
  <% end %>
  
  <%= link_to "Back", :back, class: "sm-custom-btn shadow" %>
</div>
