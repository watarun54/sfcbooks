<% if flash.any? %>
<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
    <span aria-hidden="true">&times;</span>
  </button>
  <ul>
    <% flash.each do |name, msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
